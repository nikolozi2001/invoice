{
  "name": "@nikolozi2001/invoice",
  "version": "0.1.0",
  "description": "Invoice + VAT + Cashflow SaaS built for Georgian businesses",
  "private": true,
  "author": {
    "name": "Nikolozi",
    "email": "nikolozi2001@gmail.com",
    "url": "https://github.com/nikolozi2001"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/nikolozi2001/invoice.git"
  },
  "bugs": {
    "url": "https://github.com/nikolozi2001/invoice/issues"
  },
  "homepage": "https://github.com/nikolozi2001/invoice#readme",
  "keywords": [
    "invoice",
    "vat",
    "cashflow",
    "saas",
    "georgia",
    "business",
    "nextjs",
    "prisma",
    "typescript"
  ],
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "lint:check": "eslint . --ext .ts,.tsx,.js,.jsx",
    "type-check": "tsc --noEmit",
    "vercel:build": "prisma generate && prisma migrate deploy && next build",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:migrate:prod": "prisma migrate deploy",
    "db:reset": "prisma migrate reset",
    "db:seed": "tsx prisma/seed.ts",
    "db:studio": "prisma studio",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "setup": "npm install && npm run docker:up && sleep 3 && npm run db:migrate",
    "clean": "rm -rf .next node_modules",
    "fresh": "npm run clean && npm install && npm run setup",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky install || true",
    "precommit": "lint-staged"
  },
  "dependencies": {
    "@prisma/client": "^7.2.0",
    "@types/pg": "^8.16.0",
    "lucide-react": "^0.562.0",
    "next": "16.1.3",
    "pg": "^8.17.1",
    "prisma": "^7.2.0",
    "react": "19.2.3",
    "react-dom": "19.2.3"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20.19.30",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "16.1.3",
    "tailwindcss": "^4",
    "tsx": "^4.21.0",
    "typescript": "^5"
  }
}
